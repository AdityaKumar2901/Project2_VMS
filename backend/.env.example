# Environment Configuration
NODE_ENV=development
PORT=5000

# Database Configuration (SQLite - No MySQL server needed!)
DB_PATH=./data/marketplace.db

# JWT Configuration
# Generate strong secrets using: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_ACCESS_SECRET=your_jwt_access_secret_min_32_characters_long_change_this
JWT_REFRESH_SECRET=your_jwt_refresh_secret_min_32_characters_long_change_this
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# CORS Configuration
CORS_ORIGIN=http://localhost:5173
